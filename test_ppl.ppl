    //convert index to x and y values
    var wx = Math.floor(n%window_x);
    var wy = Math.floor(n/window_x);
    var x0 = x-Math.floor(window_x/2);
    var y0 = y-Math.floor(window_y/2);
    var ind = (wx+x0)+(wy+y0)*width;
    return ind;
  }, window_x*window_y);
